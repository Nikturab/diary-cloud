<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:textSize="20dp"
        android:text="111"
        android:padding="5dp"
        android:layout_weight="0.37"
        android:id="@+id/fragment_messages__fragment_message_info__user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18dp"
        android:text="111"
        android:padding="5dp"
        android:layout_weight="0.37"
        android:id="@+id/fragment_messages__fragment_message_info__subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:padding="15dp"
        android:text="fjirehguergerhu"
        android:id="@+id/fragment_messages__fragment_message_info__content"
        android:layout_weight="1.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >
        <EditText
            android:id="@+id/fragment_messages__fragment_message_info__reply_text"
            android:textSize="16sp"
            android:gravity="left"
            android:padding="5dp"
            android:hint="Введите ответ"
            android:background="@drawable/border_editor"
            android:layout_gravity="bottom"
            android:layout_weight="9.40"
            android:minHeight="90dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <ImageButton
            android:id="@+id/fragment_messages__fragment_message_info__reply_button"
            android:layout_gravity="bottom"
            android:layout_width="64dp"
            android:layout_height="91dp"
            android:background="#00000000"
            android:padding="5dp"
            android:src="@drawable/send"/>
    </LinearLayout>
</LinearLayout>